---
interface Props {
  slug: string;
  title: string;
  description: string;
  tags: string[];
  cardBg?: string;
}

const { slug, title, description, tags, cardBg } = Astro.props;
---

<a href={`/work/${slug}`} class="project-card">
  <div class="project-card__frame" style={cardBg ? `background-color: ${cardBg};` : ''}>
    <div class="project-card__media">
      <span class="project-card__placeholder" style={cardBg ? 'color: rgba(255,255,255,0.4);' : ''}>{title}</span>
    </div>
  </div>
  <div class="project-card__content">
    <h3 class="project-card__title">{description}</h3>
    <span class="project-card__tags">{tags.join(', ')}</span>
  </div>
</a>

<style>
  .project-card {
    display: block;
    text-decoration: none;
    color: var(--color-text);
  }

  .project-card__frame {
    width: 100%;
    aspect-ratio: 16 / 9;
    border-radius: var(--radius-md);
    background: var(--color-bg-alt);
    padding: clamp(24px, 4vw, 48px);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    overflow: hidden;
  }

  .project-card__media {
    width: 100%;
    height: 100%;
    border-radius: 8px;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.15);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-card__media img,
  .project-card__media video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .project-card__placeholder {
    font-size: var(--text-small);
    font-weight: 400;
    color: var(--color-text-tertiary);
  }

  @media (hover: hover) {
    .project-card__frame {
      transition: transform 0.6s ease;
    }
    .project-card:hover .project-card__frame {
      transform: scale(1.02);
    }
  }

  .project-card__content {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .project-card__title {
    font-size: var(--text-h3);
    font-weight: 500;
    line-height: 1.4;
  }

  .project-card__tags {
    font-size: var(--text-small);
    font-weight: var(--weight-medium);
    color: var(--color-text-tertiary);
  }
</style>
