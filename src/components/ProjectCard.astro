---
interface Props {
  slug: string;
  title: string;
  description: string;
  tags: string[];
  cardTextColor?: string;
}

const { slug, title, description, tags, cardTextColor } = Astro.props;
---

<a
  href={`/work/${slug}`}
  class="project-card"
  style={cardTextColor ? `--card-text: ${cardTextColor}` : ''}
>
  <div class="project-card__media">
    <div class="placeholder" style="aspect-ratio: 16/10;">
      {title} â€” Video/Image
    </div>
  </div>
  <div class="project-card__content">
    <h3 class="project-card__title">{description}</h3>
    <span class="project-card__tags">{tags.join(', ')}</span>
  </div>
</a>

<style>
  .project-card {
    display: block;
    text-decoration: none;
    color: var(--card-text, var(--color-text));
  }

  .project-card__media {
    position: relative;
    width: 100%;
    overflow: hidden;
    margin-bottom: 20px;
    background: #E8E8E8;
    border-radius: var(--radius-md);
  }

  .project-card__media video,
  .project-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media (hover: hover) {
    .project-card__media {
      transition: transform 0.6s ease;
    }
    .project-card:hover .project-card__media {
      transform: scale(1.02);
    }
  }

  .project-card__content {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .project-card__title {
    font-size: var(--text-h3);
    font-weight: var(--weight-regular);
    line-height: 1.4;
  }

  .project-card__tags {
    font-size: var(--text-small);
    color: var(--color-text-tertiary);
  }
</style>
