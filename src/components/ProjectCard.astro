---
const { project } = Astro.props;
---

<a href={`/work/${project.slug}`} class="project-card">
  <div
    class="project-card__media"
    style={`background-color: ${project.cardBg || '#F0F0F0'};`}
  >
    <span class="project-card__placeholder">
      {project.title}
    </span>
  </div>
  <h3 class="project-card__title">{project.description}</h3>
  <span class="project-card__tags">{project.tags.join(', ')}</span>
</a>

<style>
  .project-card {
    display: block;
    text-decoration: none;
    color: var(--color-text);
  }

  .project-card__media {
    width: 100%;
    aspect-ratio: 16 / 9;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    overflow: hidden;
  }

  .project-card__media img,
  .project-card__media video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .project-card__placeholder {
    font-size: var(--text-small);
    font-weight: 400;
    color: rgba(255, 255, 255, 0.4);
  }

  .project-card__title {
    font-size: var(--text-h3);
    font-weight: 500;
    line-height: 1.4;
    margin-bottom: 8px;
  }

  .project-card__tags {
    font-size: var(--text-small);
    font-weight: 400;
    color: var(--color-text-tertiary);
  }

  @media (hover: hover) {
    .project-card__media {
      transition: transform 0.6s ease;
    }
    .project-card:hover .project-card__media {
      transform: scale(1.02);
    }
  }
</style>
